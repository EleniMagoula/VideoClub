@model VideoClub.Web.Areas.Bookings.Models.BookingBindingModel
@{
    ViewBag.Title = "CreateFromMovieList";
}

<h2>Κράτηση ταινίας</h2>

<a href="#" onclick="history.go(-1);"><i class="fas fa-arrow-alt-circle-left fa-2x"></i></a>

@using (Html.BeginForm("CreateFromMovieList", "Booking"))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(b => b.DVDId, "DVD Id")
        @Html.TextBoxFor(b => b.DVDId, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Customer.UserName, "Πελάτες")
        @Html.DropDownListFor(b => b.CustomerId, new SelectList(Model.Customers, "Id", "Username"), "--Πελάτες--", new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Customer.UserName)
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Comments, "Σχόλια")
        @Html.TextBoxFor(b => b.Comments, new { @class = "form-control" })
        @Html.ValidationMessageFor(b => b.Comments)
    </div>

    <button type="submit" class="btn btn-primary">Κράτηση</button>
}
