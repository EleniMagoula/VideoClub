@model VideoClub.Web.Areas.Bookings.Models.BookingBindingModel
@{
    ViewBag.Title = "Return";
}

<h2>Επιστροφή ταινίας</h2>

<a href="#" onclick="history.go(-1);"><i class="fas fa-arrow-alt-circle-left fa-2x"></i></a>

@using (Html.BeginForm("Returned", "Booking", new { bookingId = Model.Id }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(b => b.CustomerId, "Id Πελάτη")
        @Html.TextBoxFor(b => b.CustomerId, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.DVDId, "DVD Id")
        @Html.TextBoxFor(b => b.DVDId, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Comments, "Σχόλια")
        @Html.TextBoxFor(b => b.Comments, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <button type="submit" class="btn btn-primary">Επιστροφή?</button>
}

